                <li>
                  <%= link_to public_items_path %>
                  <i></i>商品一覧
                </li>
                <li>
                  <%= link_to public_cart_items_path %>
                    <i></i>カート
                </li>
                <li>
                  <%= link_to destroy_customer_session_path, method: :delete %>
                    <i></i>Log out
                </li>
              <% else %>
                <li>
                  <%= link_to 'About', public_about_path %>
                </li>
                <li>
                  <%= link_to '商品一覧', public_items_path %>
                </li>
                <!--<li>-->
                  <!--%= link_to new_customer_registration_path %>-->
                <!--    <i></i>新規登録-->
                <!--</li>-->
                <!--<li>-->
                <!--%= link_to new_customer_sessio_path %>-->
                <!--    <i></i>ログイン-->
                <!--</li>-->
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <main>

    <%= yield %>
    
    </main>
    
  </body>
</html>
    
